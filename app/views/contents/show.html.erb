<% provide(:title, "Detail") %>
<div class="content">
    <% if content_author @content %>
        <div>
            <%= link_to("編集", edit_content_path(@content)) %>
            <%= link_to("削除", @content, method: :delete, data: { confirm: "記事を削除しますか？" }) %>
        </div>
    <% end %>
    <% if @content.image.url %>
        <div><%= image_tag @content.image.url %></div>
    <% end %>
    <div class="title">
    <%= @content.title %>
    </div>
    <div class="text">
    <%= @content.text %>
    </div>
</div>