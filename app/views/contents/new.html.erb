<% provide(:title, "Post") %>
<h1>記事投稿</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@content, url:post_path) do |f| %>

    <%= f.label 'タイトル' %>
    <%= f.email_field :title, class: 'form-control' %>

    <%= f.label '本文' %>
    <%= f.password_field :text, class: 'form-control' %>

    <%= f.submit '投稿', class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>